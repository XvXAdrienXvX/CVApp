@{
    Layout = "~/Views/Shared/_Main.cshtml";

}
@using System.Data;

@model CVApp.Models.UserDetailsViewModel
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link rel="stylesheet" href="~/css/About.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
<script src="~/js/PageAnimation.js"></script>
<div class="about-background"></div>

<ul class="boxes">
    <li>
        <div class="text-wrapper about">

            <img class="tech" src="~/Images/java.png" />
            <img class="tech" src="~/Images/c.png" />
            <img class="tech" src="~/Images/sql.png" />
            <h2 class="Title">About <span>Me</span></h2>

        </div>
    </li>

    <li>
        <div class="text-wrapper">
            <ul class="cards">
                <li class="cards_item">
                    <div class="card">
                        <div class="card_image"><img src="~/Images/jon.jpg"></div>
                        <div class="card_content">

                            <p class="card_text"><i class="fa fa-envelope"></i>&nbsp;&nbsp;@Model.Email</p>
                            <p class="card_text"><i class="fa fa-mobile fa-2x"></i>&nbsp;&nbsp;@Model.Phone</p>

                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </li>

    <li>
        <div class="text-wrapper bio">
            <h1><span>Hi, I'm </span>@Model.FirstName</h1>
            <p>
                @Model.Resume

            </p>
        </div>
    </li>
    <li>
        <div class="text-wrapper">
            <h2 class="Title">My <span>Skills</span></h2>
            <div class="skillset">

                @Html.PartialAsync("Skill",Model)

            </div>
        </div>
    </li>
</ul>